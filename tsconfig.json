{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": false,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "skipLibCheck": true,
    "types": ["reflect-metadata", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["node_modules/@types", "./src/typings", "node_modules/@eclipse-che"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
