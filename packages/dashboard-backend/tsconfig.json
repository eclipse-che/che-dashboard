{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*",
      ],
    },
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "lib",
  ],
  "include": [
    "src",
    "src/devfileSchemas/**/*.json"
  ],
}