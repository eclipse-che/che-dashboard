{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": false,
    "outDir": "./lib/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2018",
    "lib": ["ES2018", "dom"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}
